  
  <div class= "details">
  <center><h2> Search</h2>
  <%= form_with url: '/cards', method: :get do |form| %>
    <%= form.label :search, "Enter Entire SKU:" %>
    <%= form.text_field :search %>
    <%= form.submit "Find!"%>
    <%end%>
  <br>
  <h2>Current Inventory</h2>
  <table>
    <thead>
    <tr>
      <td colspan ="2">SKU <td>
      <td></td>
      <td>Lastest Update</td>
      <td></td>
      <td> quantity </td>
      </tr>
    </thead>
    <tbody>
    <%@cards.all.each do |card| %>
    <tr>
    <td colspan = "2"><%= link_to "#{card.sku}", card_path(card) %></td>
    <td></td>
    <td></td>
    <td><%= card.updated_at.strftime("%a, %B %d, %Y") %></td>
    <td>||</td>
    <td><%= card.in_stock %></td>

    </tr>
    <%end%>
    </tbody>
    </table>
    </center>
    <%= link_to '<button type="button">User Profile</button>'.html_safe, user_path(@user) %> <br>

</div>
